{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "Node16",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es6", "es2015", "dom"],
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "build"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "tests",
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "jest.config.js",
    "webpack.config.js",
    "webpack.config.*"
  ]
}
